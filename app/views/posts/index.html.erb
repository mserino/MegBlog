<% if @posts.any? %>
	<% @posts.each do |post| %>

		<h2><%= post.title %></h2>
		<p><%= post.description %></p>
		<p>Posted by <%= post.user.email %></p>
		<p>Created at <%= post.created_at.strftime("%A %d %B %Y, %H:%M") %></p>
		<h4><%= link_to "Edit post", edit_post_path(post.id) %></h4>
		<h4><%= link_to "Delete post", post_path(post.id), method: :delete, data: {confirm: "Do you really want to delete this post?"} %></h4>
	<% end %>
<% else %>
	<h1>No posts yet :(</h1>
<% end %>

<% if current_user %>

	<h2><%= link_to "New post", new_post_path %></h2>

<% else %>
	
	<h2>You must be logged in to add new posts</h2>

<% end %>