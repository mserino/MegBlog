<% if @posts.any? %>
	<% @posts.each do |post| %>

		<h2><%= post.title %></h2>
		<p><%= post.description %></p>
		<p>Posted by <%= post.user.email %></p>
		<p>Created at <%= post.created_at.strftime("%A %d %B %Y, %H:%M") %></p>
		<h4><%= link_to "Edit post", edit_blog_post_path(post.blog_id, post.id), url: {action: "edit"} %></h4>
		<h4><%= link_to "Delete post", blog_post_path(post.blog_id, post.id), method: :delete, 'data-confirm' => "Are you sure you want to delete this post?" %></h4>
	<% end %>
<% else %>
	<h1>No posts yet :(</h1>
<% end %>