<!DOCTYPE html>
<html>
<head>
  <title>Megblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Sign in or sign up form -->
  <div>
    <% if current_user %>
      <p>Welcome <%= current_user.email %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete %></p>
    <% else %>
      <%= form_for(User.new, as: :user, url: session_path(:user), html: { class: 'navbar-form navbar-right' }) do |f| %>
        <%= f.email_field :email, placeholder: 'Email' %>
        <%= f.password_field :password, placeholder: 'Password' %>
        <%= f.button "Sign in" %>
      <% end %>
    <% end %>
  </div>
<!-- End of sign in - sign up form -->

<!-- Alerts -->
    <% if notice %>
    	<p>
        <%= notice %>
      </p>
    <% end %>
    <% if alert %>
      <p>
        <%= alert %>
      </p>
    <% end %>
<!-- End of alerts -->

<%= yield %>

</body>
</html>
